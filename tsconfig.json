{
    "compilerOptions": {
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "module": "commonjs",
       "moduleResolution": "node",
       "pretty": true,
       "sourceMap": true,
       "target": "es6",
       "outDir": "./dist",
       "baseUrl": "./",
       "typeRoots": [
          "node_modules/@types",
          "lib/local-types"
       ],
       "paths":{
         "mongoose-jsonschema": ["./lib/local-types/mongoose-jsonschema"]
       }
    },
    "exclude": [
       "node_modules",
       "lib/local-types/**"
    ]
 }